    }

    private DateOnly GetDate(string date)
    {
        int day = int.Parse(date.Split('.',',')[0]);
        int mounth = int.Parse(date.Split('.', ',')[1]);
        int year = int.Parse(date.Split('.', ',')[2]);
        return new DateOnly(year, mounth, day);
    }

    private void OpenPastBooking(Booking booking)
    {
        servise.booking = booking;
        manager.NavigateTo("bookingForCheck");
    }

    private void OpenCurrentBooking(Booking booking)
    {
        servise.booking = booking;
        manager.NavigateTo("booking");
    }

    private void Sorter(string sorting)
    {
        switch (sorting)
        {
            case "roomType":
                if (!isClientCountSortON) GetRoomWithSelectType(rooms);
                else if (isClientCountSortON)
                {
                    GetRoomWithSelectType(rooms);
                    GetRoomForPeopleCount(sortingRooms);
                }
                //else if (!isClientCountSortON && isDateSortON)
                //{
                //    GetRoomWithSelectType(rooms);
                //    GetRoomWithoutBooking(sortingRooms);
                //}
                //else if (isClientCountSortON && isDateSortON)
                //{
                //    GetRoomWithSelectType(rooms);
                //    GetRoomForPeopleCount(sortingRooms);
                //    GetRoomWithoutBooking(sortingRooms);
                //}
                break;

            case "clientCount":
                if (!isRoomTypeSortON) GetRoomForPeopleCount(rooms);
                else if (isRoomTypeSortON)
                {
                    GetRoomForPeopleCount(rooms);
                    GetRoomWithSelectType(sortingRooms);
                }
                //else if (!isRoomTypeSortON && isDateSortON)
                //{
                //    GetRoomForPeopleCount(rooms);
                //    GetRoomWithoutBooking(sortingRooms);
                //}
                //else if (isRoomTypeSortON && isDateSortON)
                //{
                //    GetRoomForPeopleCount(rooms);
                //    GetRoomWithSelectType(sortingRooms);
                //    GetRoomWithoutBooking(sortingRooms);
                //}
                break;

            case "date":
                if (!isRoomTypeSortON) GetRoomWithoutBooking(rooms);
                else if (isRoomTypeSortON)
                {
                    GetRoomWithoutBooking(rooms);
                    GetRoomWithSelectType(sortingRooms);
                }
                //else if (!isRoomTypeSortON && isClientCountSortON)
                //{
                //    GetRoomWithoutBooking(rooms);
                //    GetRoomForPeopleCount(sortingRooms);
                //}
                //else if (isRoomTypeSortON && isClientCountSortON)
                //{
                //    GetRoomWithoutBooking(rooms);
                //    GetRoomWithSelectType(sortingRooms);
                //    GetRoomForPeopleCount(sortingRooms);
                //}
                break;
        }
    }

    private void GetRoomWithSelectType(List<Room> newSortingRooms)
    {
        isRoomTypeSortON = true;
        sortingRooms = newSortingRooms.Where((element) =>
            element.Type.ToLower().Contains(roomType.ToLower()))
        .ToList();
    }

    private List<Room> GetRoomWithoutBooking(List<Room> newSortingRooms)
    {
        List<Room> list = new();
        foreach (var room in newSortingRooms)
        {
            var temp = bookings.FirstOrDefault((element) => element.Room.Number == room.Number);
            if(temp != null)
            {
                if (temp.DepartureDate < GetDate(DateTime.Now.Date.ToString("dd.MM.yyyy")))
                {
                    list.Add(room);
                }   
            }
            else list.Add(room);
        }
        return list;
    }

    private void GetRoomForPeopleCount(List<Room> newSortingRooms)
    {
        isClientCountSortON = true;
        sortingRooms = newSortingRooms.Where((element) =>
            element.Capacity >= bookModel.AdaltCount + bookModel.ChildCount)
        .ToList();
    }

    private void BookingSearch()
    {
        sortingBookings = bookings.Where((element) =>
            element.Client.ClientName.ToLower().Contains(search.ToLower()))
        .ToList();
    }

    private void OpenClientList()
    {
        clientsSearch = "block";
    }

    private void SearchingClientForSelect()
    {
        sortingClients = clients.Where((element) =>
            element.ClientName.ToLower().Contains(nameClient.ToLower()))
        .ToList();
    }

    private void SelectCleint(Client selectedClient)
    {
        clientsSearch = "none";
        nameClient = selectedClient.ClientName;
        client = selectedClient;
    }

    private void ClaerBookingForm()
    {
        nameClient = string.Empty;
        bookModel.AdaltCount = 0;
        bookModel.ChildCount = 0;
        roomType = string.Empty;
        chekInDate = null;
        chekOutDate = null;
        roomNumber = string.Empty;
        isClientCountSortON = false;
        isDateSortON = false;
        isRoomTypeSortON = false;
        clientsSearch = "none";
    }
}

